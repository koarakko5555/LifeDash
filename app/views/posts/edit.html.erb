<div class="space-y-6 w-3/4 max-w-lg mx-auto">
  <h1 class="text-xl font-bold text-gray-700">投稿を編集</h1>
  <%= form_with(model: @post, local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :title, "タイトル", class: "block text-gray-700 font-bold" %>
      <%= f.text_field :title, class: "form-input mt-1 block w-full border-gray-300 rounded" %>
    </div>
    <div class="mb-4">
      <%= f.label :content, "内容", class: "block text-gray-700 font-bold" %>
      <%= f.text_area :content, class: "form-input mt-1 block w-full border-gray-300 rounded" %>
    </div>
    <div class="flex justify-end">
      <%= f.submit "更新", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
